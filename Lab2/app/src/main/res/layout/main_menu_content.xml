<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="418dp"
        android:layout_height="759dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="194dp"
            android:layout_height="312dp"
            android:layout_margin="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="40dp"
            android:background="#954343"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/profile_view"
            app:layout_constraintEnd_toStartOf="@+id/card_view2"
            app:layout_constraintStart_toEndOf="@+id/card_view2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="317dp"
                android:background="#72C85E"
                android:padding="16dp"
                android:text="Sorting recommend"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="176dp"
            android:layout_height="192dp"
            android:layout_margin="8dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="28dp"
            android:background="#72C85E"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/card_view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/card_text2"
                android:layout_width="190dp"
                android:layout_height="202dp"
                android:background="#72C85E"
                android:padding="16dp"
                android:text="Garbage history"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_view"
            android:layout_width="191dp"
            android:layout_height="234dp"
            android:layout_margin="8dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="51dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/map_interactive"
            app:layout_constraintEnd_toStartOf="@+id/card_view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view">

            <TextView
                android:id="@+id/card_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#72C85E"
                android:padding="16dp"
                android:text="Profile"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="179dp"
            android:layout_height="356dp"
            android:layout_margin="8dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="43dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/map_interactive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_view"
            app:layout_constraintTop_toBottomOf="@+id/card_view2">

            <TextView
                android:id="@+id/card_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#72C85E"
                android:padding="16dp"
                android:text="Collection Schedules"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/map_interactive"
            android:layout_width="383dp"
            android:layout_height="171dp"
            android:layout_margin="8dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="43dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view3">

            <TextView
                android:id="@+id/map_interactive_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#72C85E"
                android:padding="16dp"
                android:text="Interactive container map"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>