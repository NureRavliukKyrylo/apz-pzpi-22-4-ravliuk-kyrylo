<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="791dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/stations_card_view"
            android:layout_width="194dp"
            android:layout_height="312dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="14dp"
            android:background="#954343"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/profile_view"
            app:layout_constraintEnd_toStartOf="@+id/card_view2"
            app:layout_constraintStart_toEndOf="@+id/card_view2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#72C85E"
                android:gravity="center|top"
                android:padding="16dp"
                android:text="Stations"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="421dp"
                app:srcCompat="@drawable/waste" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="176dp"
            android:layout_height="192dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="12dp"
            android:background="#72C85E"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/card_view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stations_card_view"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/card_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#72C85E"
                    android:gravity="center|top"
                    android:padding="16dp"
                    android:text="Garbage history"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="82dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_text2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/card_text2"
                    app:layout_constraintTop_toTopOf="@+id/card_text2"
                    app:layout_constraintVertical_bias="0.507"
                    app:srcCompat="@drawable/waste_history" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_view"
            android:layout_width="191dp"
            android:layout_height="234dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="90dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/map_interactive"
            app:layout_constraintEnd_toStartOf="@+id/card_view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stations_card_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/card_text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#72C85E"
                    android:gravity="center|top"
                    android:padding="16dp"
                    android:text="Profile"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="152dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_text1"
                    app:layout_constraintEnd_toEndOf="@+id/card_text1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card_text1"
                    app:srcCompat="@drawable/eco_user" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="179dp"
            android:layout_height="356dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="91dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/map_interactive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stations_card_view"
            app:layout_constraintTop_toBottomOf="@+id/card_view2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/card_text3"
                    android:layout_width="178dp"
                    android:layout_height="360dp"
                    android:background="#72C85E"
                    android:gravity="center|top"
                    android:padding="16dp"
                    android:text="Collection Schedules"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="1dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="158dp"
                    android:layout_height="337dp"
                    android:layout_marginTop="100dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_text3"
                    app:layout_constraintEnd_toEndOf="@+id/card_text3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card_text3"
                    app:srcCompat="@drawable/trash_bin" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/map_interactive"
            android:layout_width="391dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-70dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="29dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/map_interactive_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#72C85E"
                    android:gravity="center|top"
                    android:padding="16dp"
                    android:text="Interactive container map"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/map_interactive_text"
                    app:layout_constraintEnd_toEndOf="@+id/map_interactive_text"
                    app:layout_constraintStart_toStartOf="@+id/map_interactive_text"
                    app:layout_constraintTop_toTopOf="@+id/map_interactive_text"
                    app:srcCompat="@drawable/bin_map" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>